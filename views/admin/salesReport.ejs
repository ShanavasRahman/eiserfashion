<script>
  document.getElementById('downloadButton').addEventListener('click', function () {
    // Select the element containing the content you want to convert to PDF
    const element = document.getElementById('salesTable');

    // Set the options for html2pdf
    const options = {
      margin: 10,
      filename: 'sales_report.pdf',
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2 },
      jsPDF: { unit: 'mm', format: 'a4', orientation: 'landscape' },
    };

    // Use html2pdf to generate and download the PDF
    html2pdf(element, options).then(function (pdf) {
      const blob = new Blob([pdf.output('blob')], { type: 'application/pdf' });
      const link = document.createElement('a');
      link.href = window.URL.createObjectURL(blob);
      link.download = 'sales_report.pdf';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    });
  });
</script>





<script>
  function formatDate(date) {
    return date.toLocaleDateString();
  }

  $(document).ready(function () {
    $("#fromDate, #toDate").datepicker({
      dateFormat: 'yy-mm-dd',
      changeMonth: true,
      changeYear: true
    });

    $("#okButton").click(function () {
      var fromDate = $("#fromDate").datepicker("getDate");
      var toDate = $("#toDate").datepicker("getDate");

      if (fromDate && toDate && toDate >= fromDate) {
        var formattedFromDate = formatDate(fromDate);
        var formattedToDate = formatDate(toDate);

        console.log("Selected Date Range: " + formattedFromDate + " to " + formattedToDate);

        fetch(`/admin/filteredSalesReport?fromDate=${formattedFromDate}&toDate=${formattedToDate}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        })
          .then(response => {
            if (!response.ok) {
              throw new Error(`HTTP error! Status: ${response.status}`);
            }
            return response.text();
          })
          .then(data => {
            const newData = JSON.parse(data);
            console.log('Received Data:', newData.orders);
            // Update the table with the filtered data
            updateTable(newData.orders);
          })
          .catch(error => {
            console.error('Error fetching filtered sales report:', error);
          });
      } else {
        Swal.fire({
          title: "Invalid Date Range",
          text: "Please select a valid 'From' and 'To' date range.",
          icon: "error",
          confirmButtonColor: "#3085d6",
          confirmButtonText: "OK",
        });
      }
    });

    function updateTable(orders) {
      console.log(orders);
      const tableBody = document.getElementById('salesTableBody');

      tableBody.innerHTML = '';

      orders.forEach((order, index) => {
        order.products.forEach((product) => {
          const newRow = tableBody.insertRow();

          const columns = [
            index + 1,
            order.user.name,
            product.product && product.product.name,
            order._id,
            formatDate(new Date(order.orderDate)), 
            order.status,
            product.total
          ];

          columns.forEach((column, columnIndex) => {
            const cell = newRow.insertCell(columnIndex);
            cell.textContent = column;
          });
        });
      });
    }
  });
</script>
