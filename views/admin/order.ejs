<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function applyReturnRequest(event, orderId) {
        event.preventDefault(); // Prevent default form submission behavior

        const form = document.getElementById(`applyReturnRequestForm_${orderId}`);
        
        // Fetch API to submit the form data asynchronously
        fetch(form.action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                orderId: orderId,
                returnRequestStatus: document.getElementById(`returnRequest_${orderId}`).value
            })
        })
        .then(response => {
            if (response.ok) {
                // Success message with SweetAlert
                Swal.fire({
                    icon: 'success',
                    title: 'Return request status updated successfully',
                    showConfirmButton: false,
                    timer: 1500 // Close after 1.5 seconds
                });
                // Reload the page after a short delay
                setTimeout(() => {
                    window.location.reload();
                }, 1500); // 1500 milliseconds = 1.5 seconds
            } else {
                // Error message with SweetAlert
                Swal.fire({
                    icon: 'error',
                    title: 'Failed to update return request status',
                    text: 'An error occurred. Please try again.',
                    showConfirmButton: true
                });
            }
        })
        .catch(error => {
            console.error('Error updating return request status:', error);
            // Error message with SweetAlert
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'An error occurred. Please try again.',
                showConfirmButton: true
            });
        });
    }
</script>

















