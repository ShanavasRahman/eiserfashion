    <script>
      function addToCartAndProceed() {
    const productId = '<%= product._id %>'; // Assuming product has an _id property

    const quantity = document.getElementById('sst').value;

    window.location.href = `/checkout?productId=${productId}&quantity=${quantity}&fromCart=false`;}
    </script>
    <script>


    function increaseQuantity() {
      var result = document.getElementById('sst');
      var sst = parseInt(result.value); // Parse the value to an integer
      var maxStock = parseInt('<%= product.stock %>'); // Get the available stock from the server-side template

      if (!isNaN(sst) && sst < maxStock) { 
        result.value++;
      } else {
        alert('Cannot increase quantity. Maximum stock reached.');
      }
}

function decreaseQuantity() {
  var result = document.getElementById('sst');
  var sst = result.value;
  if (!isNaN(sst) && sst > 1) {
    result.value--;
  }
}
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  function addToCart(event) {
    event.preventDefault(); // Prevent default behavior of anchor tag
  
    console.log("Hello");
    var quantity = document.getElementById('sst').value;
  
    var urlParams = new URLSearchParams(window.location.search);
    var productId = urlParams.get('productId');
  
    fetch('/addToCart', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        productId: productId,
        quantity: parseInt(quantity, 10),
      }),
    })
    .then(response => {
      if (!response.ok) {
        throw new Error('Network response was not ok');
      }
      return response.json();
    })
    .then(data => {
      // Handle the response
      if (data.added) {
        Swal.fire({
          icon: 'success',
          title: 'Product Added',
          text: 'Product has been added to your cart!',
        });
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: 'Product already exists in the cart',
        });
      }
    })
    .catch(error => {
      console.error('Error adding product to cart:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Error adding product to cart. Please try again later.',
      });
    });
  }
  </script>
  
  




























