<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<script>
  async function deleteImage(index, imageURL) {
    // Use Swal.fire for confirmation
    Swal.fire({
      title: 'Are you sure?',
      text: 'You won\'t be able to revert this!',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then(async (result) => {
      if (result.isConfirmed) {
        try {
          const response = await fetch(`/admin/api/delete-image?url=${encodeURIComponent(imageURL)}`, {
            method: 'DELETE',
          });

          if (response.ok) {
            // Successful response, you may want to update the UI or reload the page
            console.log('Image deleted successfully');
            document.getElementById('existingImages').removeChild(document.getElementById(`imageContainer${index}`));
          } else {
            // Handle error
            console.error('Failed to delete image');
          }
        } catch (error) {
          // Handle fetch error
          console.error('Error during fetch:', error);
        }
      }
    });
  }
</script>
