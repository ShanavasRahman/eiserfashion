            <div style="display: flex; justify-content: center;">
              <h2 class="card-title" style="color: #4B49AC;">Edit product</h2> 
            </div>

            <form class="forms-sample" autocomplete="off" action="/admin/updateProduct/<%= product.id %>" method="post" enctype="multipart/form-data">
              <div class="form-group">
                  <label for="exampleInputName1">Product name</label>
                  <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" name="name" value="<%= product && product.name ? product.name : '' %>">
