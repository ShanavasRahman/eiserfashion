                      <% }); %>
                  </select>
              </div>
          
              <div class="form-group">
                  <label for="exampleSelectBrand">Brand</label>
                  <select class="form-control" id="exampleSelectBrand" name="brand">
                      <option value="LP" <%= product && product.brand === 'LP' ? 'selected' : '' %>>LP</option>
                      <option value="Allensolly" <%= product && product.brand === 'Allensolly' ? 'selected' : '' %>>Allensolly</option>
                      <option value="Peter England" <%= product && product.brand === 'Peter England' ? 'selected' : '' %>>Peter England</option>
                  </select>
              </div>
          
          
              <div class="form-group">
