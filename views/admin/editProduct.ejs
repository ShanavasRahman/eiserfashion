        <script>
          function validateNumberInput(input) {
            var inputValue = input.value;
          
            // Reset error message
            input.nextElementSibling.innerText = '';
          
            // Perform validation
            if (isNaN(inputValue) || +inputValue < 0) {
              input.nextElementSibling.innerText = 'Please enter a number greater than or equal to zero.';
            }
          }
          </script>
