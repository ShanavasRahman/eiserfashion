<script>
 function filterProducts(categoryId) {
  const productContainer = document.getElementById('product-container');

  if (!productContainer) {
    console.error('Product container not found.');
    return;
  }

  const allProducts = document.querySelectorAll('.category-button-all');

  // Reset styles for all buttons
  allProducts.forEach(button => {
    button.classList.remove('active');
  });

  // Highlight the selected category button
  const selectedButton = document.querySelector(`.category-button-specific[onclick="filterProducts('${categoryId}')"]`);

  if (selectedButton) {
    selectedButton.classList.add('active');
  } else {
    console.error('Selected button not found.');
  }

  // Show/hide products based on the selected category
  const allProductItems = productContainer.querySelectorAll('.col-lg-3');
  allProductItems.forEach(item => {
    if (categoryId === 'All' || item.classList.contains(`category-${categoryId}`)) {
      item.style.display = 'block';
    } else {
      item.style.display = 'none';
    }
  });
  
}




