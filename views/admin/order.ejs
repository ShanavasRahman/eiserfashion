                    <h4 class="card-title">Orders</h4>

                    <div class="table-responsive pt-3">
                      <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>User</th>
                                <th>Email</th>
                                <th>Products</th>
                                <th>Ordered product view</th>
                                <th>Amount</th>
                                <th>Order Status</th>
                                <th>Payment Status</th>
                                <th>Delivery Status</th>
                                <th>Return Request</th>
                                <th>Return Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr>
                                    <td><%= order._id %></td>
                                    <td><%= order.user.name %></td>
                                    <td><%= order.user.email %></td>
                                    <td>
                                      <% order.products.forEach(product => { %>
                                          <% if (product.product) { %>
                                              <i class="bi bi-dot"></i><%= product.product.name %>
                                              <br><br>
                                          <% } %>
                                      <% }); %>
                                  </td>
                                  <td class="text-center"><button class="btn btn-primary view-btn" onclick="viewOrderDetails('<%= order._id %>')">View</button>
                                  </td>
                                  
                                    <td>â‚¹ <%= order.totalAmount.toFixed(2) %></td>
                                    <td><%= order.status %></td>
                                    <td>
                                      <% if (order.paymentMethod === 'Razorpay') { %>
                                        Payment Completed
                                      <% } else if (order.paymentMethod === 'Cash on Delivery' && order.status === 'Delivered') { %>
                                        <% if (order.products.some(product => product.returnRequested === 'Completed')) { %>
                                          Product Returned
                                        <% } else { %>
                                          Completed
                                        <% } %>
                                      <% } else { %>
                                        Pending
                                      <% } %>
                                    </td>
                                    
                                    <td>
                                        <select onchange="editOrderStatus('<%= order._id %>', this.value)" class="form-control">
                                            <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                            <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                            <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                            <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                        </select>
                                    </td>
                                    <td>
                                        <%= order.returnRequested %>
                                    </td>
                                    
