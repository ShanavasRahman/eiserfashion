<script>
  document.addEventListener('DOMContentLoaded', async () => {
    const blockButtons = document.querySelectorAll('.blockButton');

    try {
      const blockUser = async (userId) => {
        try {
          const blockEndpoint = '/admin/blockUser';
          const response = await fetch(blockEndpoint, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ userId }),
          });

          const data = await response.json();

          if (data.success) {
            // Toggle between blocked and unblocked states
            blockButtons.forEach((blockButton) => {
              if (blockButton.getAttribute('data-user-id') === userId) {
                if (data.isBlocked) {
                  blockButton.classList.remove('unblocked');
                  blockButton.classList.add('blocked');
                  blockButton.innerText = 'UNBLOCK';

                  // Update the text in the corresponding status column
                  const statusSpan = blockButton.closest('tr').querySelector('.status');
                  statusSpan.innerText = 'Inactive';
                } else {
                  blockButton.classList.remove('blocked');
                  blockButton.classList.add('unblocked');
                  blockButton.innerText = 'BLOCK';

                  // Update the text in the corresponding status column
                  const statusSpan = blockButton.closest('tr').querySelector('.status');
                  statusSpan.innerText = 'Active';
                }
              }
            });
          } else {
            console.error('Error blocking/unblocking user:', data.error);
          }
        } catch (error) {
          console.error('Error blocking/unblocking user', error);
        }
      };

      // Iterate through each button to add event listeners
      blockButtons.forEach((blockButton) => {
        blockButton.addEventListener('click', async () => {
          const userId = blockButton.getAttribute('data-user-id');

          // Set the confirmation message based on the button state
          const isBlocked = blockButton.classList.contains('blocked');
          const confirmationMessage = isBlocked
            ? 'Are you sure you want to unblock this user?'
            : 'Are you sure you want to block this user?';

          // Ask for confirmation using Swal.fire
          const result = await Swal.fire({
            title: 'Confirmation',
            text: confirmationMessage,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, proceed!'
          });

          if (result.isConfirmed) {
            // Call the blockUser function if the user confirms
            await blockUser(userId);
          }
        });
      });
    } catch (error) {
      console.error('Error initializing block buttons:', error);
    }
  });
</script>
  
  
